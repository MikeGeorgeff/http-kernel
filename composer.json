{
  "name": "georgeff/http-kernel",
  "description": "HTTP kernel",
  "type": "library",
  "authors": [
    {
      "name": "Mike Georgeff",
      "email": "mike@georgeff.co",
      "role": "Author"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "georgeff/kernel": "^1.0",
    "laminas/laminas-diactoros": "^3.8",
    "nikic/fast-route": "^1.3",
    "psr/http-message": "^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "relay/relay": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "Georgeff\\HttpKernel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Georgeff\\HttpKernel\\Test\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ],
    "analyze": [
      "vendor/bin/phpstan"
    ],
    "phpcs": [
      "vendor/bin/phpcs"
    ]
  }
}
